@model IEnumerable<CF_Budgeter.Models.Account>

@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create","Accounts", new {householdId = 1d }, new { @class = "btn btn-primary", @type="button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
       {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.Name)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Balance)
               </td>
               <td>
                   @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                   @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                   @Html.ActionLink("Delete", "Delete", new {id = item.Id})
               </td>
           </tr>
        }
    }
    else
    {
        <tr><text>There are currently no accounts associated with your household(s).</text></tr>
    }
</table>
