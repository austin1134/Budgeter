@model CF_Budgeter.Models.ApplicationUser

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
            <hr/>
            <div>
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "col-lg-3 form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "col-lg-3 form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Username</label>
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "col-lg-3 form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new {@class = "col-lg-3 form-control"})
                            @Html.ActionLink("Change your password", "ChangePassword")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    <button type="submit" class="btn btn-primary bg-gray btn-sm m-t-10">Submit</button>
                </div>
            </div>
}